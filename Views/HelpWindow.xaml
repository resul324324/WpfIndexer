<Window x:Class="WpfIndexer.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yardım ve Arama İpuçları" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundColor}"
        Foreground="{DynamicResource TextColor}">
  <ScrollViewer Margin="15" VerticalScrollBarVisibility="Auto">
    <StackPanel>
      <TextBlock Text="Detaylı Arama İpuçları" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

      <TextBlock Text="WpfIndexer, güçlü bir arama motoru olan Lucene.Net kullanır. Bu sayede standart aramaların ötesinde gelişmiş sorgular yapabilirsiniz."
                 TextWrapping="Wrap" Margin="0,0,0,15"/>

      <TextBlock Text="Temel Operatörler" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
      <TextBlock FontFamily="Consolas" LineHeight="20" TextWrapping="Wrap">
        <Run Text="🔹 AND Operatörü (ve): " FontWeight="Bold" />
        <Run Text="rapor AND bütçe" FontStyle="Italic" />
        <Run Text=" → Hem 'rapor' hem de 'bütçe' kelimesini içeren belgeleri bulur."/>
        <LineBreak />

        <Run Text="🔹 OR Operatörü (veya): " FontWeight="Bold" />
        <Run Text="fatura OR irsaliye" FontStyle="Italic" />
        <Run Text=" → 'fatura' veya 'irsaliye' kelimelerinden en az birini içeren belgeleri bulur." />
        <LineBreak />

        <Run Text="🔹 NOT Operatörü (hariç): " FontWeight="Bold" />
        <Run Text="rapor NOT bütçe" FontStyle="Italic" />
        <Run Text=" → 'rapor' içeren ancak 'bütçe' içermeyen belgeleri bulur." />
      </TextBlock>

      <TextBlock Text="Joker Karakter (Wildcard) Aramaları" FontWeight="SemiBold" FontSize="14" Margin="0,15,0,5"/>
      <TextBlock FontFamily="Consolas" LineHeight="20" TextWrapping="Wrap">
        <Run Text="🔹 Tek Karakter (?): " FontWeight="Bold" />
        <Run Text="te?t" FontStyle="Italic" />
        <Run Text=" → 'test', 'text' gibi kelimeleri bulur."/>
        <LineBreak />

        <Run Text="🔹 Çoklu Karakter (*): " FontWeight="Bold" />
        <Run Text="proje*" FontStyle="Italic" />
        <Run Text=" → 'proje', 'projeler', 'projeksiyon' gibi 'proje' ile başlayan kelimeleri bulur." />
        <LineBreak />

        <Run Text="Not:" FontStyle="Italic" />
        <Run Text=" Performans nedeniyle sorguların * veya ? ile başlaması (örn: *test) genellikle desteklenmez veya çok yavaştır." />
      </TextBlock>

      <TextBlock Text="Grup (Phrase) Aramaları" FontWeight="SemiBold" FontSize="14" Margin="0,15,0,5"/>
      <TextBlock FontFamily="Consolas" LineHeight="20" TextWrapping="Wrap">
        <Run Text="🔹 Tam Eşleşme (&quot;...&quot;): " FontWeight="Bold" />
        <Run Text="&quot;teknik şartname&quot;" FontStyle="Italic" />
        <Run Text=" → Tam olarak 'teknik şartname' kelime grubunu yan yana içeren belgeleri bulur."/>
      </TextBlock>

      <TextBlock Text="Yakınlık (Proximity) Aramaları" FontWeight="SemiBold" FontSize="14" Margin="0,15,0,5"/>
      <TextBlock FontFamily="Consolas" LineHeight="20" TextWrapping="Wrap">
        <Run Text="🔹 Yakınlık (~N): " FontWeight="Bold" />
        <Run Text="&quot;rapor bütçe&quot;~5" FontStyle="Italic" />
        <Run Text=" → 'rapor' ve 'bütçe' kelimelerinin arasında en fazla 5 kelime olan belgeleri bulur. (örn: 'rapor hazırlandı, bütçe bekleniyor')"/>
      </TextBlock>

      <TextBlock Text="Desteklenen Dosya Türleri" FontWeight="SemiBold" FontSize="14" Margin="0,15,0,5"/>
      <TextBlock TextWrapping="Wrap" LineHeight="20">
        <Run Text="Metin:" FontWeight="Bold" /> .txt, .log, .md, .csv, .json, .xml, .rtf ve tüm kod dosyaları (.cs, .py, .js, .html, .css vb.)
        <LineBreak />
        <Run Text="Ofis (Yeni):" FontWeight="Bold" /> .docx, .xlsx, .pptx
        <LineBreak />
        <Run Text="Ofis (Eski):" FontWeight="Bold" /> .doc, .xls
        <LineBreak />
        <Run Text="Belge:" FontWeight="Bold" /> .pdf (Metin içerikli)
        <LineBreak />
        <Run Text="E-posta:" FontWeight="Bold" /> .msg, .eml
        <LineBreak />
        <Run Text="Veritabanı:" FontWeight="Bold" /> .sqlite, .db (Metin sütunları)
        <LineBreak />
        <Run Text="Arşivler:" FontWeight="Bold" /> .zip, .rar, .7z, .tar (İçindeki desteklenen dosyalar)
        <LineBreak />
        <Run Text="OCR (Ayarlar'dan açılırsa):" FontWeight="Bold" /> Resim içerikli .pdf, .png, .jpg, .jpeg, .bmp, .tiff, .tif
      </TextBlock>
    </StackPanel>
  </ScrollViewer>
</Window>