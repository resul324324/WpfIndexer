<Window x:Class="WpfIndexer.Views.IndexCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:WpfIndexer.Helpers"
        xmlns:models="clr-namespace:WpfIndexer.Models"
        Title="Yeni İndeks Oluştur" Height="566" Width="680" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="{DynamicResource WindowBackgroundColor}"
        Foreground="{DynamicResource TextColor}">

    <Window.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Yeni İndeks Oluştur" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="Bu pencerede yeni bir indeks oluşturabilir, dosya türlerini seçebilir ve OCR seçeneğini etkinleştirebilirsiniz." TextWrapping="Wrap" Foreground="{DynamicResource GrayTextColor}" Margin="0,4,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="İndekslenen Klasör:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Grid.Column="1" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button Grid.Column="2" Content="Gözat..." Width="80" Command="{Binding BrowseSourceCommand}" Style="{StaticResource BrandButton}"/>
        </Grid>


        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="İndeks Yolu:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Grid.Column="1" Text="{Binding IndexPath, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button Grid.Column="2" Content="Gözat..." Width="80" Command="{Binding BrowseIndexCommand}" Style="{StaticResource BrandButton}"/>
        </Grid>

        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="İndeks Bilgileri" FontWeight="SemiBold" Margin="0,0,0,6"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="İndeks Adı:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Width="380" Text="{Binding IndexName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <Button Content="Dosya Türlerini Seç..." Command="{Binding OpenSelectFileTypesCommand}" Style="{StaticResource BrandButton}"/>
                <TextBlock Text="{Binding SelectedExtensionsSummary}" Margin="12,4,0,0" VerticalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>

            <TextBlock Text="OCR Kalitesi:" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,4,0,0"
                    Background="{DynamicResource ControlBackgroundColor}">
                <StackPanel>
                    <RadioButton Content="OCR Kapalı" GroupName="Ocr" 
                           IsChecked="{Binding Path=SelectedOcrQuality, ConverterParameter={x:Static models:OcrQuality.Off}, Converter={StaticResource EnumToBooleanConverter}}"/>

                    <RadioButton GroupName="Ocr" Margin="0,5,0,0"
                                 IsChecked="{Binding Path=SelectedOcrQuality, ConverterParameter={x:Static models:OcrQuality.Low}, Converter={StaticResource EnumToBooleanConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Düşük (Hızlı)" FontWeight="SemiBold"/>
                            <TextBlock Text=" - (Küçük/eğri metinleri okuyamaz)" Foreground="{DynamicResource GrayTextColor}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton GroupName="Ocr" Margin="0,5,0,0"
                                 IsChecked="{Binding Path=SelectedOcrQuality, ConverterParameter={x:Static models:OcrQuality.Balanced}, Converter={StaticResource EnumToBooleanConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Dengeli" FontWeight="SemiBold"/>
                            <TextBlock Text=" - (Çoğu metni okur, orta hızda)" Foreground="{DynamicResource GrayTextColor}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton GroupName="Ocr" Margin="0,5,0,0"
                                 IsChecked="{Binding Path=SelectedOcrQuality, ConverterParameter={x:Static models:OcrQuality.High}, Converter={StaticResource EnumToBooleanConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Yüksek (Yavaş)" FontWeight="SemiBold"/>
                            <TextBlock Text=" - ('Best' modelleri kullanır, en yüksek doğruluk)" Foreground="DarkRed" Margin="5,0,0,0"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>


            <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,8,0,0"
                    Background="{DynamicResource ControlBackgroundColor}" Height="144">
                <StackPanel Margin="0,0,0,-11">
                    <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding CurrentFile}" FontSize="11" Foreground="{DynamicResource GrayTextColor}" TextTrimming="CharacterEllipsis" Margin="0,4,0,0"/>

                    <ProgressBar Minimum="0" 
                                 Maximum="{Binding ProgressMax}" 
                                 Value="{Binding ProgressValue}" 
                                 IsIndeterminate="{Binding IsIndeterminate}" 
                                 Height="18" 
                                 Margin="0,8,0,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <TextBlock Text="{Binding ProgressCounterText}" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,12,0"/>
                        <TextBlock Text="{Binding ProgressPercentage}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Geçen:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding ElapsedTime}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Kalan:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding RemainingTime}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <Button Content="İptal" Command="{Binding CancelCommand}" MinWidth="70" Style="{StaticResource BrandButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="İndex Oluştur" 
              Style="{StaticResource BrandButton}"
              Command="{Binding StartIndexCommand}" 
              MinWidth="140"
              Margin="0,0,8,0" BorderThickness="0,0,8,0"/>
            <Button Content="Kapat" 
              Style="{StaticResource BrandButton}"
              Command="{Binding CloseCommand}"
              MinWidth="100" BorderThickness="0,0,0,0" Height="26" Width="120" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>