<Window x:Class="WpfIndexer.Views.ViewSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:WpfIndexer.Models"
        xmlns:helpers="clr-namespace:WpfIndexer.Helpers"
        mc:Ignorable="d"
        Title="Görünüm Ayarları" Height="480" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundColor}"
        Foreground="{DynamicResource TextColor}">
    <Window.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Görünüm Ayarları" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Text="Uygulama Teması" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <RadioButton Content="Açık" GroupName="Theme" Margin="0,5,0,0"
                                     IsChecked="{Binding Path=Settings.Theme, ConverterParameter={x:Static models:AppTheme.Light}, Converter={StaticResource EnumToBooleanConverter}}"/>
                        <RadioButton Content="Koyu" GroupName="Theme" Margin="0,5,0,0"
                                     IsChecked="{Binding Path=Settings.Theme, ConverterParameter={x:Static models:AppTheme.Dark}, Converter={StaticResource EnumToBooleanConverter}}"/>
                        <RadioButton Content="Sistem Varsayılanı" GroupName="Theme" Margin="0,5,0,0" IsEnabled="False"
                                     IsChecked="{Binding Path=Settings.Theme, ConverterParameter={x:Static models:AppTheme.SystemDefault}, Converter={StaticResource EnumToBooleanConverter}}"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Önizleme Yeri" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <RadioButton Content="Sağda" GroupName="PreviewPosition" Margin="0,5,0,0"
                                     IsChecked="{Binding Path=Settings.PreviewPosition, ConverterParameter={x:Static models:PreviewPanePosition.Right}, Converter={StaticResource EnumToBooleanConverter}}"/>
                        <RadioButton Content="Altta" GroupName="PreviewPosition" Margin="0,5,0,0"
                                     IsChecked="{Binding Path=Settings.PreviewPosition, ConverterParameter={x:Static models:PreviewPanePosition.Bottom}, Converter={StaticResource EnumToBooleanConverter}}"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="Önizleme Paneli" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="10" CornerRadius="4">
                    <StackPanel>
                        <CheckBox Content="Ana Pencerede Önizleme Panelini Göster" Margin="0,0,0,0"
                                  IsChecked="{Binding Settings.EnablePreview}"/>

                        <StackPanel Margin="20,10,0,0" 
                                    IsEnabled="{Binding Settings.EnablePreview}">

                            <TextBlock Text="Önizleme Modu:" FontWeight="Bold" Margin="0,0,0,5"/>

                            <RadioButton Content="Rapor Modu (Hızlı, vurgulamalı düz metin)"
                                         GroupName="PreviewMode"
                                         IsChecked="{Binding Settings.PreviewMode, 
                                                     Converter={StaticResource EnumToBooleanConverter}, 
                                                     ConverterParameter=Rapor}"/>

                            <RadioButton Content="Canlı Mod (Yüksek kaliteli, orijinal görünüm)"
                                         GroupName="PreviewMode"
                                         Margin="0,5,0,0"
                                         IsChecked="{Binding Settings.PreviewMode, 
                                                     Converter={StaticResource EnumToBooleanConverter}, 
                                                     ConverterParameter=Canli}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Kaydet ve Kapat"
            Style="{StaticResource BrandButton}"
            IsDefault="True"
            Command="{Binding SaveAndCloseCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Width="110" Height="25" Margin="0,0,10,0"/>
            <Button Content="İptal"
            Style="{StaticResource BrandButton}"
            IsCancel="True"
            Width="100" Height="25"/>
        </StackPanel>
    </Grid>
</Window>